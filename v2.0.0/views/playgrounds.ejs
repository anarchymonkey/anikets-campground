<% include partials/headPlayground.ejs %>

<div class="container">
<div class = "jumbotron">
<h1> Play with images here </h1>
<button class = "btn btn-danger" onclick="window.location.href='/play/add'">add new Playground </button>
</div>
</div>
<div class="container-fluid">
  <div class="row" style="display:flex; flex-wrap:wrap;">


<% for(var i = 0 ; i< playground.length ;i++){%>
  <div class="col-md-3 col-sm-6">
  <div class="thumbnail">
    <img class="caption" src="<%= playground[i]["image"]%>">
  </div>
  <div class="caption">
  <h1><%= playground[i]["name"]%></h1>
  <a class="btn btn-danger" href="/play/<%= playground[i]._id %>">more info</a>
</div>
</div>
  <%}%>
</div>
</div>


